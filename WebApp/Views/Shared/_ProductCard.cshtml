@using WebApp.Models.Entities

@model Product

<article class="product-card">
    <a asp-controller="Products" asp-action="ProductDetails" asp-route-id="@Model.Id">
        <img src="/images/products/@Model.Image" alt="@Model.Name">
        <h3>@Model.Name</h3>
        <p>$@Model.Price.ToString().Remove(Model.Price.ToString().Length - 2)</p>
    </a>
</article>